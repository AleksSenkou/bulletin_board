ul#admin-show
  - @users.each do |user|
    li
      = link_to gravatar_for(user, 50), user, class: 'avatar'
      = link_to 'Show', user, id: 'show-button'
      - if !user.admin?
        = link_to 'Delete', user, id: 'delete-button', data: { confirm: "Are you sure?" }, method: :delete
    = link_to "  #{user.name}", user
    span#admin-show-adverts-info Adverts count: #{user.adverts.count}
    hr

  = will_paginate @users
